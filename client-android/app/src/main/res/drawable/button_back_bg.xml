<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed" /> <!-- светло-серый при нажатии -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Состояние по умолчанию -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_default" /> <!-- полупрозрачный белый -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>